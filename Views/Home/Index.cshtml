@using AireSpringTechTest.Data
@using AireSpringTechTest.Utils
@model IEnumerable<AireSpringTechTest.Data.EmployeeRecord>
@{
    ViewData["Title"] = "Home Page";
}
<div class="col-md-12">
    <a class="btn btn-primary float-end" asp-action="Edit" asp-controller="Home">Add</a>
</div>
<div class="col-md-12">
    @if (Model.Any())
    {
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Employee Name</th>
                <th>Phone</th>
                <th>Zip</th>
                <th>Hire Date</th>
                <th>Actions</th>
            </tr>
            @foreach (EmployeeRecord employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.EmployeeLastName, @employee.EmployeeFirstName</td>
                    <td>@employee.EmployeePhone.FormatPhoneNumber()</td>
                    <td>@employee.EmployeeZip</td>
                    <td>@employee.HireDate.FormatDate()</td>
                    <td><a asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a> | <a asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No records</p>
    }
</div>
